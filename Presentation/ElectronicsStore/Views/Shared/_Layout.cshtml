@using Store.Web
@using Store.Web.Models
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - интернет-магазин на C#</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Интернет-магазин радиодеталей</a>
                <div class="d-flex align-items-center">
                    <div class="input-group mr-3">
                        <form class="form-inline my-2 my-lg-0" action="@Url.Action("Index","Search")" method="get">
                            <div class="input-group">
                                <input class="form-control mr-sm-2" type="search" name="query" placeholder="Название компонента" />
                                <div class="input-group-append">
                                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Искать</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <span class="navbar-text ml-auto">
                        @{
                            if (Context.Session.TryGetCart(out Cart cart) && cart.TotalCount > 0)
                            {
                                <a href="@Url.Action("Index", "Order")">Товаров @cart.TotalCount на сумму @cart.TotalPrice</a>
                            }
                            else
                            {
                                @:Корзина пуста
                            }
                        }
                    </span>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main>
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
